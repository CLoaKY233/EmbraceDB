{
  "languages": {
    "C++": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--style=file"]
        }
      }
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd"
      },
      "initialization_options": {
        "fallbackFlags": ["-std=c++23"]
      }
    }
  }
}
