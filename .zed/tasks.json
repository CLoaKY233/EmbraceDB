[
  {
    "label": "Build (Debug)",
    "command": "cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug && cmake --build build",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Build (Release)",
    "command": "cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Release && cmake --build build",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Database",
    "command": "./build/embrace",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Test (All)",
    "command": "./build/embrace_tests",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Test (Filter)",
    "command": "./build/embrace_tests --gtest_filter=\"$ZED_SYMBOL*\"",
    "use_new_terminal": false,
    "reveal": "always"
  },
  {
    "label": "Sanitizers",
    "command": "./scripts/run_sanitizers.sh",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Coverage",
    "command": "./scripts/coverage.sh",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Coverage (Open)",
    "command": "./scripts/coverage.sh open",
    "use_new_terminal": false,
    "hide": "on_success"
  },
  {
    "label": "Format Code",
    "command": "cmake --build build --target format",
    "use_new_terminal": false,
    "hide": "on_success"
  },
  {
    "label": "Clean",
    "command": "rm -rf build build_asan build_coverage build_fuzz coverage_report",
    "use_new_terminal": false,
    "hide": "on_success"
  }
]
